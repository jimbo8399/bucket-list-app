@model BucketListModel

@{
    ViewBag.Title = "List of Bucketlist Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Bucketlist Items</h1>

<h2>Top 5 Closest</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TopFiveClosestItems.FirstOrDefault().Name)
        </th>
        <th>
            @Html.Raw("Cost - €")
        </th>
        <th>
            @Html.Raw("Distance - km")
        </th>
        <th>
            @Html.Raw("Current choice")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.TopFiveClosestItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Complete", "Complete", new { id=item.Id, isCompleted=item.IsCompleted, name=item.Name, price=item.Price, distance=item.Distance, description=item.Description })
            </td>
        </tr>
    }
</table>

