@model IEnumerable<bucketlist.Models.Item>

@{
    ViewBag.Title = "List of Bucketlist Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Bucketlist Items</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPicked)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td>
            <form asp-controller="Item" asp-action="Pick" method="post">
                <input type="checkbox" asp-for="@item.IsPicked" />
                <input type="hidden" asp-for="@item.Id" />
                <input type="hidden" asp-for="@item.Name" />
                <input type="hidden" asp-for="@item.Description" />
                <input type="hidden" asp-for="@item.Price" />
                <input type="hidden" asp-for="@item.Distance" />
                <button type="submit">Pick</button>
            </form>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Complete", "Complete", new { id=item.Id, isPicked=item.IsPicked })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
